<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="locale"
    android:background="@color/white_color"
    android:padding="@dimen/activity_vertical_margin"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/my_accounts_row_img_view"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_my_accounts_chat_ic"
        android:tint="@color/dark_txt_color"/>

    <TextView
        android:id="@+id/my_accounts_row_name_txt_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textDirection="locale"
        android:layout_margin="@dimen/medium_margin"
        android:layout_weight="1"/>

    <ImageView
        android:id="@+id/my_accounts_row_back_img_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_home_right_arrow_ic"/>

</LinearLayout>