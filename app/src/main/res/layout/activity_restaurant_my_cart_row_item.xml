<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="locale"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/restaurant_item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textDirection="locale"
            android:layout_weight="1"
            android:drawablePadding="@dimen/big_margin"
            android:padding="@dimen/big_margin"
            android:textColor="@color/dark_txt_color"
            android:textStyle="bold" />

        <!--android:drawableStart="@drawable/veg"-->

        <ImageView
            android:id="@+id/restaurant_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_close" />

    </LinearLayout>

    <TextView
        android:id="@+id/restaurant_item_ingredient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textDirection="locale"
        android:layout_marginBottom="@dimen/big_margin"
        android:paddingEnd="@dimen/big_margin"
        android:paddingStart="@dimen/big_margin"
        android:textColor="@color/disable_txt_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/big_margin"
        android:paddingEnd="@dimen/big_margin"
        android:paddingStart="@dimen/big_margin">

        <include
            layout="@layout/activity_my_cart_add_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textDirection="locale"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/activity_vertical_margin"
            android:text="x"
            android:textColor="@color/disable_txt_color" />

        <TextView
            android:id="@+id/restaurant_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textDirection="locale"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/big_margin"
            android:textColor="@color/disable_txt_color" />

        <TextView
            android:id="@+id/restaurant_item_total_price"
            android:layout_width="0dp"
            android:textDirection="locale"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="end"
            android:textColor="@color/disable_txt_color" />

    </LinearLayout>

</LinearLayout>