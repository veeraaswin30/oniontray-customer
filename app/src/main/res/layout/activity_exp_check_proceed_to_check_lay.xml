                    <!--<android.support.design.widget.TextInputLayout-->
                    <!--android:id="@+id/ec_p_to_c_coupon_code_til"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_weight="1"-->
                    <!--app:errorTextAppearance="@style/error_appearance">-->

                    <!--<EditText-->
                    <!--android:id="@+id/ec_p_to_c_coupon_code_et"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:backgroundTint="@color/white_color"-->
                    <!--android:hint="@string/proc_to_chec_apply_coupon_txt"-->
                    <!--android:singleLine="true"-->
                    <!--android:textAppearance="?android:textAppearanceSmall" />-->

                    <!--</android.support.design.widget.TextInputLayout>-->

                    <!--<TextView-->
                    <!--android:id="@+id/ec_p_to_c_apply_btn_tv"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:layout_margin="@dimen/small_margin"-->
                    <!--android:gravity="right|center"-->
                    <!--android:text="@string/proc_to_chec_apply_txt"-->
                    <!--android:textColor="@color/text_color"-->
