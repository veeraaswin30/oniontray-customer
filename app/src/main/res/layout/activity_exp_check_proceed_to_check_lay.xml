                    <!--</TableRow>-->


                    <!--delivery_charges_total-->

                    <TableRow
                        android:id="@+id/ec_p_to_c_del_val_promo_code_tr"
                        android:layout_marginTop="@dimen/big_margin"
                        android:background="@drawable/promo_code_edit_background"
                        android:gravity="center_vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/big_margin"
                                android:src="@drawable/ic_ingred_select_done_green_btn_ic" />

                            <TextView
                                android:id="@+id/ec_p_to_c_del_val_promo_code_tv"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:textDirection="locale"
                                android:layout_weight="1"
                                android:textColor="@color/disable_txt_color"
                                android:textSize="@dimen/medium_txt_appearence_size" />

                            <TextView
                                android:id="@+id/ec_p_to_c_del_val_promo_code_amt_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textDirection="locale"
                                android:layout_margin="@dimen/big_margin"
                                android:textColor="@color/text_color"
                                android:textSize="@dimen/medium_txt_appearence_size" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/ec_p_to_c_promo_code_remove_btn_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textDirection="locale"
                            android:layout_margin="@dimen/small_margin"
                            android:gravity="right|center"
                            android:text="@string/proc_to_chec_remove_txt"
                            android:textColor="@color/text_color"
                            android:visibility="gone"
                            tools:ignore="RtlHardcoded" />

                    </TableRow>

                    <TableRow android:layout_marginTop="@dimen/big_margin">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textDirection="locale"
                            android:layout_weight="1"
                            android:text="@string/proc_to_chec_grand_total_txt"
                            android:textColor="@color/text_color" />

                        <TextView
                            android:id="@+id/ec_p_to_c_grand_tot_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textDirection="locale"
                            android:gravity="end"
                            android:singleLine="false"
                            android:textColor="@color/text_color" />

                    </TableRow>

                    <!--Coupon Applay-->

                    <TableRow
                        android:id="@+id/ec_p_to_c_coupon_apply_tr"
                        android:layout_marginTop="@dimen/big_margin"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/proc_check_coupon_btn_size"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginRight="@dimen/smal_margin"
                                    android:layout_weight="1"
                                    android:background="@drawable/promo_code_copoun_edt_background"
                                    android:orientation="vertical">

                                    <EditText
                                        android:id="@+id/ec_p_to_c_coupon_et"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textDirection="locale"
                                        android:backgroundTint="@color/white_color"
                                        android:gravity="center_vertical"
                                        android:hint="@string/proc_to_chec_apply_coupon_txt"
                                        android:inputType="text"
                                        android:singleLine="true"
                                        android:textAppearance="?android:textAppearanceSmall"
                                        android:textColor="@color/dark_txt_color" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="@dimen/smal_margin"
                                    android:orientation="vertical">

                                    <Button
                                        android:id="@+id/ec_p_to_c_coupon_apply_btn"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/promo_code_applay_remove_background"
                                        android:text="@string/proc_to_chec_apply_txt"
                                        android:textAllCaps="false"
                                        android:textAppearance="?android:textAppearanceSmall"
                                        android:textColor="@color/text_color" />

                                </LinearLayout>

                            </LinearLayout>

                            <TextView
                                android:id="@+id/ec_p_to_c_coupon_code_err_msg_tv"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textDirection="locale"
                                android:layout_marginBottom="@dimen/small_margin"
                                android:layout_marginTop="@dimen/small_margin"
                                android:text="@string/err_promo_detail"
                                android:textColor="@color/text_color"
                                android:visibility="gone" />

                        </LinearLayout>

                    </TableRow>

                    <!--Apply Coupon discount lay-->

                    <TableRow
                        android:id="@+id/ec_p_to_c_coupon_dis_tr"
                        android:layout_marginTop="@dimen/big_margin"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/ec_p_to_c_coupon_disc_amt_holder_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textDirection="locale"
                            android:layout_weight="1"
                            android:text="@string/proc_to_chec_coupon_discount_txt" />

                        <TextView
                            android:id="@+id/ec_p_to_c_coupon_dis_amt_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textDirection="locale"
                            android:gravity="end"
                            android:singleLine="false"
                            android:textColor="@color/text_color" />

                    </TableRow>

                    <!--Coupon Removed-->

                    <TableRow
                        android:id="@+id/ec_p_to_c_coupon_remove_tr"
                        android:layout_marginTop="@dimen/big_margin"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/proc_check_coupon_btn_size"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="@dimen/smal_margin"
                                android:layout_weight="1"
                                android:background="@drawable/promo_code_copoun_edt_background"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/ec_p_to_c_coupon_tv"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textDirection="locale"
                                    android:backgroundTint="@color/white_color"
                                    android:drawableLeft="@drawable/ic_ingred_select_done_green_btn_ic"
                                    android:drawablePadding="@dimen/small_margin"
                                    android:gravity="center_vertical"
                                    android:hint="@string/proc_to_chec_apply_coupon_txt"
                                    android:maxLines="1"
                                    android:textAppearance="?android:textAppearanceSmall"
                                    android:textColor="@color/dark_txt_color" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/smal_margin"
                                android:orientation="vertical">

                                <Button
                                    android:id="@+id/ec_p_to_c_coupon_remove_btn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/promo_code_applay_remove_background"
                                    android:text="@string/proc_to_chec_remove_txt"
                                    android:textAllCaps="false"
                                    android:textAppearance="?android:textAppearanceSmall"
                                    android:textColor="@color/text_color" />

                            </LinearLayout>

                        </LinearLayout>

                    </TableRow>

                    <!--Amount to pay-->

                    <TableRow
                        android:id="@+id/ec_p_to_c_coupon_amt_pay_tr"
                        android:layout_marginTop="@dimen/big_margin"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/ec_p_to_c_amt_pay_holder_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textDirection="locale"
                            android:layout_weight="1"
                            android:text="@string/proc_to_chec_pay_amt_txt" />

                        <TextView
                            android:id="@+id/ec_p_to_c_amt_pay_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textDirection="locale"
                            android:gravity="end"
                            android:singleLine="false"
                            android:textColor="@color/text_color" />

                    </TableRow>

                </TableLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


    <Button
        android:id="@+id/ec_p_to_c_pro_pay_but"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="@string/add_date_proc_to_pay_txt"
        android:textAllCaps="false"
        android:textColor="@color/white_color"
        android:textSize="@dimen/medium_txt_appearence_size" />

</LinearLayout>