<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_color"
    android:orientation="vertical"
    android:padding="@dimen/big_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/pic_my_loc_list_addr_item_lay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/inputradiovalue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/smal_margin"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="@color/dark_txt_color" />

            <TextView
                android:id="@+id/inputPersonName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceMedium"
                android:inputType="textMultiLine" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/my_addr_delete_icon_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/smal_margin"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <ImageView
                android:id="@+id/input_add_del"
                android:layout_width="@dimen/addr_list_recyclebin_btn_size"
                android:layout_height="@dimen/addr_list_recyclebin_btn_size"
                android:layout_margin="@dimen/medium_margin"
                android:src="@drawable/delete_icon" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>