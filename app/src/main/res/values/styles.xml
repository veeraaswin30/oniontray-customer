<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/normal_font</item>
    </style>

    <style name="MyTheme.ActionBarStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:titleTextStyle">@style/TitleBarTextColor</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="TitleBarTextColor" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:fontFamily">@font/normal_font</item>
    </style>


    <style name="MyDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@color/dark_txt_color</item>
        <item name="android:textSize">@dimen/activity_horizontal_margin</item>
        <item name="android:textColorPrimary">@color/disable_txt_color</item>
        <item name="android:fontFamily">@font/normal_font</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fontFamily">@font/normal_font</item>
    </style>

    <style name="MyTheme" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/normal_font</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:actionMenuTextColor">@color/screen_bg_color</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/screen_bg_color</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="colorControlNormal">@color/screen_bg_color</item>
        <item name="android:actionBarItemBackground">@android:color/white</item>
        <item name="android:fontFamily">@font/normal_font</item>
    </style>

    <style name="AppThemeStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- bottom line color -->
        <item name="colorControlNormal">@android:color/white</item>
        <!-- text color -->
        <item name="android:textColor">@android:color/white</item>
        <!-- hint text color -->
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:fontFamily">@font/normal_font</item>
    </style>

    <style name="Radiobuttonstyle">
        <!-- bottom line color -->
        <item name="colorControlNormal">@color/dark_txt_color</item>

        <item name="colorAccent">@color/colorPrimary</item>
        <!-- text color -->
        <item name="android:textColor">@android:color/white</item>
        <!-- hint text color -->
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:fontFamily">@font/normal_font</item>
    </style>

    <style name="ThemeToolbar" parent="Theme.AppCompat.Light">
        <!-- navigation icon color -->
        <item name="colorControlNormal">@color/screen_bg_color</item>
        <!-- color of the menu overflow icon -->
        <item name="android:textColorSecondary">@color/screen_bg_color</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/normal_font</item>
    </style>


    <style name="GalaxyZooThemeToolbarDarkOverflow" parent="Theme.AppCompat.NoActionBar">
        <!-- android:textColorPrimary is the  color of the title text
             in the Toolbar, in the Theme.AppCompat theme:  -->
        <item name="android:textColorPrimary">@color/screen_bg_color</item>


        <item name="android:fontFamily">@font/normal_font</item>

        <!-- android:textColorPrimaryInverse is the  color of the title
             text in the Toolbar, in the Theme.AppCompat.Light theme:  -->
        <!-- <item name="android:textColorPrimaryInverse">@color/abc_primary_text_material_light</item> -->

        <!-- android:actionMenuTextColor is the color of the text of
              action (menu) items in the Toolbar, at least in the
              Theme.AppCompat theme.
              For some reason, they already get the textColorPrimary
              when running on API 21, but not on older versions of
              Android, so this is only necessary to support older
              Android versions.-->
        <item name="actionMenuTextColor">@color/screen_bg_color</item>
        <!-- android:textColorSecondary is the color of the menu
             overflow icon (three vertical dots) -->
        <item name="android:textColorSecondary">@color/screen_bg_color</item>

        <!-- This would set the toolbar's background color,
              but setting this also changes the popup menu's background,
              even if we define popupTheme for our <Toolbar> -->
        <!-- <item name="android:background">@color/color_primary</item> -->
    </style>


