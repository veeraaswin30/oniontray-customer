<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_color"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin_mobile"
    android:paddingBottom="@dimen/activity_vertical_margin_mobile"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/my_accounts_row_img_view"
        android:layout_width="@dimen/my_account_logo_icon_size"
        android:layout_height="@dimen/my_account_logo_icon_size"
        android:src="@drawable/ic_my_accounts_chat_ic"/>

    <TextView
        android:id="@+id/my_accounts_row_name_txt_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/medium_margin"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_weight="1"/>

    <ImageView
        android:id="@+id/my_accounts_row_back_img_view"
        android:layout_width="@dimen/addr_list_recyclebin_btn_size"
        android:layout_height="@dimen/addr_list_recyclebin_btn_size"
        android:src="@drawable/ic_home_left_arrow_ic"/>

</LinearLayout>