<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_color"
    android:layoutDirection="rtl">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_margin"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/offers_load_image"
            android:layout_width="@dimen/notifi_list_row_img_size"
            android:layout_height="@dimen/notifi_list_row_img_size"
            android:layout_marginLeft="@dimen/small_margin"
            tools:ignore="RtlHardcoded" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:baselineAligned="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:padding="@dimen/medium_margin"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/offers_store_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:singleLine="true"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/brown_text" />

                    <TextView
                        android:id="@+id/offers_valid_promo_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:layout_marginTop="@dimen/smal_margin"
                        android:textSize="@dimen/medium_txt_appearence_size"
                        android:textColor="@color/disable_txt_color" />

                    <TextView
                        android:id="@+id/offers_validity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/smal_margin"
                        android:textSize="@dimen/medium_txt_appearence_size"
                        android:gravity="right"
                        android:textColor="@color/disable_txt_color" />

                </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>